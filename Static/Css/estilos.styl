gris_oscuro = #444
gris_texto = #7A7A7A
azul = #22BCE0

body
	background #E8E8E8
	font-family Arial 
	color gris_oscuro
	font-size 16px
footer
	background orange
	padding 1em 0 
	text-aling center

header
	background-image url(../imagenes/header.jpg)
	background-repeat no-repeat
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color white
	height 150px
	padding 0.5em
	overflow hidden
	position relative
	z-index 1

	
	.logo
		border-right 1px solid azul
		width 100px
		float left
		margin-top 20px
		img
			width 80px
			
	.titular
		margin 0 80px 0 100px
		top 0
		.filtro
			color azul
			font-size 14px
			font-weight bold
			font-style italic 
			text-decoration none
		.titulo
			font-size 45px
			font-weight normal 
			color white
			margin 5px 0 15px 50px
nav
	background azul
	border-left 15px solid white
	position relative
	
	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		left 0
		position absolute
		top 0
	.menu
		height 50px
		line-height 50px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap
		li
			display inline-block 
			a
				color white
				display inline-block
				margin 0 0.2em
				padding 0 0.5em
				text-decoration none
				font-size 18px
			&:hover
				background-color #4d4dff
.posts
	padding 0.5em

	.post
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		color gris_texto
		margin-bottom 1em

		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden

			.datos
				float right

				.comentarios
					background gris_oscuro
					border-radius 3px
					color white
					margin 0 1em 0 0
					padding 2px 5px
					text-decoration none

				.comentarios
					text-decoration none

					&:after
						color #FCB92D
						content "\e601"
						font-family "iconitos"
						font-size 1.1em

			.autor
					margin 0.2em 0 0 0
					a
						text-decoration none
						color orange


		.descripcion

			.detalles
				height 170px
				margin-left 130px

				.resumen
					font-size 16px
					font-family Arial
					margin-bottom 10px
				.fecha
					float right
					margin 0 1em 0 0

				.tag
					background azul
					border-radius 0.5em
					color white
					padding 0.2em 0.5em
					text-decoration none
				.titulo
					margin 0
					
					a
						color gris_oscuro
						text-decoration none
						font-size 20px
						font-style italic
						padding 0.5em 0.5em 0 0

			.imagen
				float left

				img
					height 160px
					vertical-align top
					width 120px
	
	.leidos
		display inline-block
		background white
		float right
		margin-right 4em
		width 30%
		border-radius 0 0 .5em .5em
		box-shadow 2px 2px 10px rgba(0,0,0,0.5)
		.titu-leido
			font-size 20px
			text-align center
		.ancla
			
			img
				width 330px	
				margin-left 25px
				margin-bottom 30px
				padding-bottom 5px
						
		
@media screen and (min-width: 768px)

	.posts
		.post
			width 55%
			vertical-align top
			display inline-block 
			margin-right 0
			margin-left 5%
			&:nth-child(odd)
				margin-right 1%
@media screen and (max-width: 500px)
	.posts
		.post
			height 400px
			.descripcion
				.imagen
					img
						margin-right 8px
				.detalles
					margin-left 5px
					margin-right 3px
					.resumen
						margin-left 1px
						border-bottom 3px solid azul
						padding-bottom 1em
					.titulo
						margin-bottom 1em
			.acciones
				display none
	header
		.titular
			.titulo
				    margin: 5px 0 15px 10px;	